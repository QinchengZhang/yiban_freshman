                            return false
                        } else {
                            return true
                        }
                    }
                    function CheckScan() {
                        encode_fun();
                        if (getCookie('scanresult') == "yiban_scan_result:cdmccheck") {
                            delCookie('scanresult');
                            return true
                        } else {
                            delCookie('scanresult');
                            return false
                        }
